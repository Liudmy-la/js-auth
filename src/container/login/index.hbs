<div class="page page--background">
	<header>
		{{> back-button}}
	</header>
	
	<form class="page__section">
		<h1 class="page__title">Вхід</h1>

		<div class="form">
			<div class="form__item">
				{{> field action="signupForm.change" label="Email Address" type="email" name="email" placeholder="Put Your Email"}}
				<span name="email" class="form__error">Помилка</span>
			</div>
			
			<div class="form__item">
				{{> field-password action="signupForm.change" label="Password" name="password"  placeholder="Put Your Password"}}
				<span name="password" class="form__error">Помилка</span>
			</div>
		</div>

		<button onclick="signupForm.submit()" class="button button--disabled" type="button">Увійти</button>

		<span class="alert alert--error alert--disabled">Повідомлення про стан </span>

		<span class="link__prefix"> Забули пароль?
			<a href="/recovery" class="link">Відновити</a>
		</span>
	</form>
</div> 