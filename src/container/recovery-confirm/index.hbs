<div class="page page--background">
	<header>
		{{> back-button}}
	</header>
	
	<form class="page__section">
		<h1 class="page__title">Відновлення паролю</h1>

		<div class="form">
			<div class="form__item">
				{{> field action="recoveryConfirmForm.change" label="Код" type="number" name="code" placeholder="Put Your Code"}}
				<span name="code" class="form__error">Помилка</span>
			</div>
			
			<div class="form__item">
				{{> field-password action="recoveryConfirmForm.change" label="New Password" name="password"  placeholder="Put Your New Password"}}
				<span name="password" class="form__error">Помилка</span>
			</div>
			
			<div class="form__item">
				{{> field-password action="recoveryConfirmForm.change" label="Repeat New Password" name="passwordAgain"  placeholder="Put Your New Password again"}}
				<span name="passwordAgain" class="form__error">Помилка</span>
			</div>
		</div>

		<button onclick="recoveryConfirmForm.submit()" class="button button--disabled" type="button">Змінити пароль</button>

		<span class="alert alert--error alert--disabled">Повідомлення про стан </span>
	</form>
</div> 